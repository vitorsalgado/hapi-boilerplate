{
  "name": "hapi-boilerplate",
  "version": "0.0.1",
  "description": "Hapi boilerplate project",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start-docker": "pm2-docker ecosystem.config.js --no-daemon -raw",
    "start-dev": "nodemon --ignore envs/ --ignore __tests__/ --ignore docs/",
    "dev": "npm run start-dev",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-acceptance": "yarn start && yarn ./__test/acceptance_tests",
    "lint": "eslint ./src ./__tests__",
    "security-checkup": "snyk test && mkdir -p reports/nsp && nsp check --output summary | cat > reports/nsp/summary.txt",
    "coveralls": "cat reports/coverage/lcov.info | ./node_modules/.bin/coveralls"
  },
  "engines": {
    "node": ">=8.1.4",
    "yarn": "^0.27.5"
  },
  "os": [
    "!win32"
  ],
  "private": true,
  "keywords": [
    "hapi",
    "boilerplate",
    "archetype",
    "rest",
    "api"
  ],
  "author": "Vitor Hugo Salgado <vsalgadopb@gmail.com>",
  "license": "Apache-2.0",
  "repository": "git+https://github.com/vitorsalgado/hapi-boilerplate.git",
  "bugs": {
    "url": "https://github.com/vitorsalgado/hapi-boilerplate/issues"
  },
  "homepage": "https://github.com/vitorsalgado/hapi-boilerplate#readme",
  "dependencies": {
    "boom": "^5.2.0",
    "carrier": "^0.3.0",
    "catbox": "^7.1.5",
    "catbox-redis": "^3.0.2",
    "dotenv": "^4.0.0",
    "good": "^7.2.0",
    "good-console": "^6.4.0",
    "good-squeeze": "^5.0.2",
    "hapi": "16.4.3",
    "hapi-auth-hawk": "^3.0.1",
    "hapi-swaggered": "^2.9.0",
    "hapi-swaggered-ui": "^2.6.0",
    "inert": "^4.2.1",
    "joi": "^10.6.0",
    "moment": "^2.18.1",
    "mongoose": "^4.11.3",
    "nsp": "^2.6.3",
    "pm2": "^2.6.1",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "uuid": "^3.1.0",
    "vision": "^4.1.1"
  },
  "devDependencies": {
    "async": "^2.5.0",
    "codeclimate-test-reporter": "^0.5.0",
    "commander": "^2.11.0",
    "coveralls": "^2.13.1",
    "eslint": "^4.3.0",
    "eslint-config-nodesecurity": "^1.3.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^20.0.4",
    "snyk": "^1.36.2",
    "supertest": "^3.0.0"
  },
  "jest": {
    "notify": false,
    "collectCoverage": true,
    "coverageDirectory": "reports/coverage",
    "clearMocks": true,
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testMatch": [
      "**/?(*.)(spec|test).js?(x)"
    ],
    "modulePathIgnorePatterns": [
      "__tests__/acceptance/",
      "__tests__/unit/fixtures/"
    ],
    "testPathIgnorePatterns": [
      "__tests__/acceptance/",
      "__tests__/(fixtures|__mocks__)/",
      "/_(temp|mock|install|init|helpers|utils).js$"
    ]
  }
}
